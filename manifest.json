{
  "manifest_version": 2,
  "name": "Thunderbird OAuth Provider Extension",
  "version": "1.0",
  "description": "Add a custom OAuth Provider",
  "applications": {
    "gecko": {
      "id": "Thunderbird-oauth-provider-plugin@taeschnix.de",
      "strict_min_version": "140.0"
    }
  },
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png" 
  },
  "experiment_apis": {
    "oauth_provider": {
      "schema": "experiments/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiments/oauth_provider.js"
      }
    }
  },
  "oauth_provider": {
    "issuer": "your provider name",
    "clientId": "your client",
    "clientSecret": "your secret",
    "authorizationEndpoint": "https://<provider-url>/realms/<realm-name>/protocol/openid-connect/auth",
    "tokenEndpoint": "https://<provider-url>/realms/<realm-name>/protocol/openid-connect/token",
    "redirectionEndpoint": "https://localhost",
    "usePKCE": false,
    "hostnames": ["hostname"],
    "scopes": "email profile"
  }
}
